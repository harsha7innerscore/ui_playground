# Playwright Automation Framework - Environment Configuration Template
# Copy this file to .env and configure with your actual values

# ============================================================================
# APPLICATION URLS
# ============================================================================

# Base URL for the application under test (required)
BASE_URL=http://localhost:3000

# Alternative environment URLs (optional)
STAGING_URL=https://staging.yourapp.com
PRODUCTION_URL=https://yourapp.com

# ============================================================================
# TEST AUTHENTICATION CREDENTIALS
# ============================================================================

# Test user credentials for authentication flows
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# Additional test users (optional)
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=adminpassword123

READONLY_USER_EMAIL=readonly@example.com
READONLY_USER_PASSWORD=readonlypassword123

# ============================================================================
# API CONFIGURATION (if testing API endpoints)
# ============================================================================

# API base URL and authentication
API_BASE_URL=https://api.yourapp.com
API_KEY=your-api-key-here
API_TOKEN=your-bearer-token-here

# API versioning (if applicable)
API_VERSION=v1

# ============================================================================
# TEST CONFIGURATION
# ============================================================================

# Test execution timeout (milliseconds)
TEST_TIMEOUT=30000

# Default wait timeout for elements (milliseconds)
ELEMENT_TIMEOUT=5000

# Number of retry attempts for flaky operations
RETRY_COUNT=3

# ============================================================================
# BROWSER CONFIGURATION
# ============================================================================

# Default browser for local development (chromium, firefox, webkit)
DEFAULT_BROWSER=chromium

# Headless mode (true/false)
HEADLESS=true

# Slow motion for debugging (milliseconds between actions)
SLOW_MO=0

# ============================================================================
# CI/CD ENVIRONMENT DETECTION
# ============================================================================

# CI environment flag (automatically set by CI systems)
CI=false

# Custom CI flags for specific providers
GITHUB_ACTIONS=false
GITLAB_CI=false
JENKINS=false

# ============================================================================
# EXTERNAL SERVICES (optional)
# ============================================================================

# Database connection (if needed for test data setup)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=testdb
DB_USER=testuser
DB_PASSWORD=testpass

# Email service (if testing email functionality)
EMAIL_SERVICE_URL=https://mailservice.example.com
EMAIL_API_KEY=email-api-key

# File upload service (if testing file operations)
UPLOAD_SERVICE_URL=https://uploads.example.com
UPLOAD_API_KEY=upload-api-key

# ============================================================================
# DEBUGGING AND REPORTING
# ============================================================================

# Debug mode (enables additional logging)
DEBUG=false

# Verbose logging level (error, warn, info, debug)
LOG_LEVEL=info

# Custom report output directory
REPORT_DIR=reports

# Screenshot capture mode (always, never, only-on-failure)
SCREENSHOT_MODE=only-on-failure

# Video recording mode (always, never, retain-on-failure)
VIDEO_MODE=retain-on-failure

# Trace collection mode (on, off, on-first-retry)
TRACE_MODE=on-first-retry

# ============================================================================
# PERFORMANCE TESTING (if applicable)
# ============================================================================

# Performance thresholds (milliseconds)
PAGE_LOAD_THRESHOLD=3000
API_RESPONSE_THRESHOLD=2000

# ============================================================================
# SECURITY TESTING (if applicable)
# ============================================================================

# Security scan API keys
SECURITY_SCAN_API_KEY=security-api-key

# ============================================================================
# MOBILE TESTING (if applicable)
# ============================================================================

# Mobile device emulation
MOBILE_DEVICE=iPhone 12
MOBILE_VIEWPORT_WIDTH=390
MOBILE_VIEWPORT_HEIGHT=844

# ============================================================================
# ACCESSIBILITY TESTING (if applicable)
# ============================================================================

# Accessibility standards compliance level (A, AA, AAA)
ACCESSIBILITY_LEVEL=AA

# ============================================================================
# NOTES
# ============================================================================
#
# SECURITY REMINDER:
# - Never commit the actual .env file to version control
# - Use CI/CD secrets management for sensitive values
# - Rotate credentials regularly
# - Use different credentials for each environment
#
# USAGE:
# 1. Copy this file to .env in the same directory
# 2. Replace example values with your actual configuration
# 3. Ensure .env is listed in your .gitignore file
#
# ENVIRONMENT PRECEDENCE:
# 1. CI/CD environment variables (highest priority)
# 2. .env file values
# 3. Default values in playwright.config.ts (lowest priority)
#
# ============================================================================